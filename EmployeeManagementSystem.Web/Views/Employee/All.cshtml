@model List<EmployeeManagementSystem.Data.Models.Employee>

@{
    ViewData["Title"] = "All Employees";
}

<link rel="stylesheet" href="~/css/all-page.css" />

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Date of Birth</th>
        <th>Date of Hire</th>
        <th>Phone Number</th>
        <th>Role</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var employee in Model)
    {
        <tr>
            <td>@employee.FirstName</td>
            <td>@employee.LastName</td>
            <td>@employee.DateOfBirth.ToString("dd.MM.yyyy")</td>
            <td>@employee.DateOfHire.ToString("dd.MM.yyyy")</td>
            <td>@employee.PhoneNumber</td>
            <td>@employee.Role.ToString()</td>
            <td>
                <a asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-primary">Edit</a>
                @* <a asp-action="Details" asp-route-id="@employee.Id" class="btn btn-info">Details</a> *@
                <a asp-action="Delete" asp-route-id="@employee.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
