@{
    ViewData["Title"] = "Home Page";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
<link rel="stylesheet" href="~/css/index-page.css"/>

<div class="jumbotron mt-5 mb-5 text-center">
    <h1 class="display-4">Welcome to Employee Management</h1>
    <p class="lead">Your one-stop solution for managing and attending events.</p>
    <hr class="my-4">
    <p>Explore the upcoming events or add your own.</p>
    <a class="btn btn-primary btn-lg" asp-area="" asp-controller="Employee" asp-action="All" role="button">
        <i class="fas fa-calendar-alt"></i> View Employees
    </a>
</div>

<div class="card-container d-flex justify-content-around">
    <!-- Engaging Hero Card -->
    <div class="card hero-card">
        <div class="card-body text-center">
            <img class="card-img-top rounded-circle" src="imgs/good_programmer_comarch.jpg" alt="Friendly person">
            <h5 class="card-title mt-3">Connect with Your Team</h5>
            <p class="card-text">Our platform helps you build stronger connections with your team and manage events effortlessly.</p>
            <a href="@Url.Action("All", "Employee")" class="btn btn-primary btn-lg">
                <i class="fas fa-users"></i> Explore Your Team
            </a>
        </div>
    </div>

    <!-- Informative Event Card -->
    <div class="card info-card">
        <div class="card-body text-center">
            <img class="card-img-top rounded-circle" src="imgs/how-to-become-a-comp-programmer (1).jpg" alt="Event management">
            <h5 class="card-title mt-3">Manage Your Employees</h5>
            <p class="card-text">Stay organized with our intuitive event management tools. Perfect for planning and coordination.</p>
            <a href="@Url.Action("Add", "Employee")" class="btn btn-primary">
                <i class="fas fa-plus-circle"></i> Add New Employee
            </a>
        </div>
    </div>
</div>